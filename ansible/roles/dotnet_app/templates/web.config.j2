<?xml version="1.0" encoding="utf-8"?>
<!-- Web.config - Managed by Ansible -->
<configuration>
  <connectionStrings>
    <add name="DefaultConnection"
         connectionString="Server={{ dotnet_app_db_server }};Database={{ dotnet_app_db_name }};User Id={{ dotnet_app_db_user }};Password={{ dotnet_app_db_password }};TrustServerCertificate=True;"
         providerName="System.Data.SqlClient" />
  </connectionStrings>
  <appSettings>
    <add key="Environment" value="{{ ansible_env.COMPUTERNAME | default('Production') }}" />
  </appSettings>
  <system.web>
    <compilation debug="false" targetFramework="4.8" />
    <httpRuntime targetFramework="4.8" />
    <customErrors mode="Off" />
  </system.web>
  <system.webServer>
    <handlers>
      <remove name="ExtensionlessUrlHandler-Integrated-4.0" />
      <add name="ExtensionlessUrlHandler-Integrated-4.0"
           path="*." verb="*"
           type="System.Web.Handlers.TransferRequestHandler"
           preCondition="integratedMode,runtimeVersionv4.0" />
    </handlers>
  </system.webServer>
</configuration>
